@model CreateOrUpdateNavbarElementPopupModel

<div asp-validation-summary="All"></div>
<input asp-for="Id" type="hidden" />

@if (ViewBag.RefreshPage == true)
{
    <script>
        try {window.opener.document.forms['@(Context.Request.Query["formId"])'].@(Context.Request.Query["btnId"]).click();}
        catch (e){}
        window.close();
    </script>
}

<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            <div class="form-horizontal">
                <div class="cards-group">
                    <div class="card card-default card-popup">
                        <div class="card-body">
                            <div class="form-group row">
                                <div class="col-sm-3">
                                    <nop-label asp-for="Caption" />
                                </div>
                                <div class="col-sm-9">
                                    <nop-editor asp-for="Caption" asp-postfix="@Model.Caption" />
                                    <span asp-validation-for="Caption"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-3">
                                    <nop-label asp-for="Alt" />
                                </div>
                                <div class="col-sm-9">
                                    <nop-editor asp-for="Alt" asp-postfix="@Model.Alt" />
                                    <span asp-validation-for="Alt"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-3">
                                    <nop-label asp-for="Icon" />
                                </div>
                                <div class="col-sm-9">
                                    <nop-editor asp-for="Icon" asp-postfix="@Model.Icon" />
                                    <span asp-validation-for="Icon"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-3">
                                    <nop-label asp-for="ActiveIcon" />
                                </div>
                                <div class="col-sm-9">
                                    <nop-editor asp-for="ActiveIcon" asp-postfix="@Model.ActiveIcon" />
                                    <span asp-validation-for="ActiveIcon"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-3">
                                    <nop-label asp-for="Tags" />
                                </div>
                                <div class="col-sm-9">
                                    <nop-editor asp-for="Tags" asp-postfix="@Model.Tags" />
                                    <span asp-validation-for="Tags"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-4">
                                    <nop-label asp-for="Type" />
                                </div>
                                <div class="col-md-8">
                                    <nop-select asp-for="Type" class="form-control" asp-items="Model.AvailableTypes" />
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-3">
                                    <nop-label asp-for="Value" />
                                </div>
                                <div class="col-sm-9">
                                    <nop-editor asp-for="Value" asp-postfix="@Model.Value" />
                                    <span asp-validation-for="Value"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-3">
                                    <nop-label asp-for="Index" />
                                </div>
                                <div class="col-sm-9">
                                    <nop-editor asp-for="Index" asp-postfix="@Model.Index" />
                                    <span asp-validation-for="Index"></span>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>