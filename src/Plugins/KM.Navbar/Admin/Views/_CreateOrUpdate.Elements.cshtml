@model NavbarInfoModel

@if (Model.Id > 0)
{
    <div class="card-body">
        @await Html.PartialAsync("Table", new DataTablesModel
        {
            Name = "navbar-elements-grid",
            UrlRead = new DataUrl("NavbarElementList", "Navbar", new RouteValueDictionary { [nameof(Model.NavbarElementsearchModel.NavbarId)] = Model.NavbarElementsearchModel.NavbarId }),
            UrlDelete = new DataUrl("NavbarElementDelete", "Navbar", null),
            UrlUpdate = new DataUrl("NavbarElementUpdate", "Navbar", null),
            Length = Model.NavbarElementsearchModel.PageSize,
            LengthMenu = Model.NavbarElementsearchModel.AvailablePageSizes,
            ColumnCollection = new List<ColumnProperty>
                {
                    new ColumnProperty(nameof(NavbarNavbarElementModel.NavbarElementName))
                    {
                        Title = T("Admin.Navbars.Elements.Fields.NavbarElement").Text
                    },
                    new ColumnProperty(nameof(NavbarNavbarElementModel.IsFeaturedNavbarElement))
                    {
                        Title = T("Admin.Navbars.Elements.Fields.IsFeaturedNavbarElement").Text,
                        Width = "150",
                        ClassName = NopColumnClassDefaults.CenterAll,
                        Render = new RenderBoolean(),
                        Editable = true,
                        EditType = EditType.Checkbox
                    },
                    new ColumnProperty(nameof(NavbarNavbarElementModel.DisplayOrder))
                    {
                        Title = T("Admin.Navbars.Elements.Fields.DisplayOrder").Text,
                        Width = "150",
                        ClassName = NopColumnClassDefaults.CenterAll,
                        Editable = true,
                        EditType = EditType.Number
                    },
                    new ColumnProperty(nameof(NavbarNavbarElementModel.NavbarElementId))
                    {
                        Title = T("Admin.Common.View").Text,
                        Width = "150",
                        ClassName = NopColumnClassDefaults.Button,
                        Render = new RenderButtonView(new DataUrl("~/Admin/NavbarElement/Edit/", nameof(NavbarNavbarElementModel.NavbarElementId)))
                    },
                    new ColumnProperty(nameof(NavbarNavbarElementModel.Id))
                    {
                        Title = T("Admin.Common.Edit").Text,
                        Width = "200",
                        ClassName =  NopColumnClassDefaults.Button,
                        Render = new RenderButtonsInlineEdit()
                    },
                    new ColumnProperty(nameof(NavbarNavbarElementModel.Id))
                    {
                        Title = T("Admin.Common.Delete").Text,
                        Width = "100",
                        Render = new RenderButtonRemove(T("Admin.Common.Delete").Text),
                        ClassName = NopColumnClassDefaults.Button
                    }
                }
        })
    </div>
    <div class="card-footer">
        <button type="submit" id="btnAddNewNavbarElement"
                onclick="javascript:OpenWindow('@(Url.Action("NavbarElementAddPopup", "Navbar", new { navbarId = Model.Id, btnId = "btnRefreshNavbarElements", formId = "navbar-form" }))', 800, 800, true); return false;"
                class="btn btn-primary">
            @T("Admin.Navbars.Elements.AddNew")
        </button>
        <button type="submit" id="btnRefreshNavbarElements" style="display: none"></button>
        <script>
            $(function() {
                $('#btnRefreshNavbarElements').click(function () {
                    //refresh grid
                    updateTable('#navbar-elements-grid');

                    //return false to don't reload a page
                    return false;
                });
            });
        </script>
    </div>
}
else
{
    <div class="card-body">
        @T("Admin.Navbars.Elements.SaveBeforeEdit")
    </div>
}

