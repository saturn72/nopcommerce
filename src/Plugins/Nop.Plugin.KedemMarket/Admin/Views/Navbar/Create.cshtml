@{
    Layout = "_AdminLayout";
}
@model NavbarInfoModel

@{
    ViewBag.PageTitle = T("Admin.Navbars.AddNew").Text;
    NopHtml.SetActiveMenuItemSystemName("Navbars");
}

<form asp-controller="Navbar" asp-action="Create" method="post" id="navbar-form">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.Navbars.AddNew")
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Admin.Navbars.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-floppy-disk"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-floppy-disk"></i>
                @T("Admin.Common.SaveContinue")
            </button>
        </div>
    </div>
    @await Html.PartialAsync(NavbarController.GetViewPath("_CreateOrUpdate.cshtml"), Model)
</form>