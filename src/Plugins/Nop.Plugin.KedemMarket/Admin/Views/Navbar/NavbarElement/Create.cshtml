@model CreateOrUpdateNavbarElementModel

@{
    Layout = "_AdminLayout";
    ViewBag.PageTitle = T("Admin.Navbars.Elements.AddNew").Text;
}

<form asp-controller="Navbar"
      asp-action="NavbarElementCreate"
      method="post"
      id="navbar-element-form">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.Navbars.AddNew")
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="Edit">@T("Admin.Navbars.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-floppy-disk"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-floppy-disk"></i>
                @T("Admin.Common.SaveContinue")
            </button>
        </div>
    </div>
    @await Html.PartialAsync(NavbarController.GetViewPath("NavbarElement/_CreateOrUpdate.cshtml"), Model)
</form>
